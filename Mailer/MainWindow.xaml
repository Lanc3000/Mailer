<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mailer"
        xmlns:TabSwitcher="clr-namespace:TabSwitcher;assembly=TabSwitcher" x:Class="Mailer.MainWindow"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="Mailer" Height="450" Width="830" Icon="schedule.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="281*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File" >
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Help" >
                <MenuItem Header="About" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1" x:Name="tabControl" TabStripPlacement="Right">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel.ToolTip>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/groups.ico" />
                                <TextBlock><Run Text="Формирование группы рассылки"/></TextBlock>
                            </StackPanel>
                        </StackPanel.ToolTip>
                        <Image Source="/Images/groups.ico" Width="20" HorizontalAlignment="Left"/>
                        <TextBlock Margin="3"><Run Text="Группы"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <ToolBarTray  Width="Auto" Height="65" VerticalAlignment="Top">
                        <ToolBar x:Name="tbSender" Width="Auto" Height="30" >
                            <Label x:Name="lSender" Content="Выбрать отправителя" Width="130" Height="25"/>
                            <ComboBox x:Name="cbSenderSelect" Width="270" Height="25" ToolTip="Выбрать email отправителя" SelectedIndex="0"/>
                            <Button x:Name="btnAddSender" Width="25" Height="25" ToolTip="Добавить"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Image Source="/Images/New Add64.png" />
                            </Button>
                            <Button x:Name="btnEditSender" Width="25" Height="25" ToolTip="Редактировать"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Image Source="/Images/New Edit64.png" />
                            </Button>
                            <Button x:Name="btnDeleteSender" Width="25" Height="25" ToolTip="Удалить"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Image Source="/Images/New Remove64.png" />
                            </Button>
                        </ToolBar>
                        <ToolBar x:Name="tbSmtp" HorizontalAlignment="Left" Height="30" Width="Auto"
                                 VerticalAlignment="Top" Band="1" BandIndex="0">
                            <Label x:Name="lSmtp" Content="Выбрать smtp-сервер" Height="25" Width="Auto"/>
                            <ComboBox x:Name="cbSmtpSelect" Height="25" Width="270" Margin="0"
                                      VerticalAlignment="Top" SelectedIndex="0" ToolTip="Выбрать smtp-сервер"/>
                            <Button x:Name="btnAddSmtp" Width="25" Height="25" ToolTip="Добавить"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Image Source="/Images/New Add64.png" />
                            </Button>
                            <Button x:Name="btnEditSmtp" Width="25" Height="25" ToolTip="Редактировать"
                                  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Image Source="/Images/New Edit64.png" />
                            </Button>
                            <Button x:Name="btnDeleteSmtp" Width="25" Height="25" ToolTip="Удалить"
                                  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Image Source="/Images/New Remove64.png" />
                            </Button>
                        </ToolBar>
                        <ToolBar x:Name="tbPlanner" HorizontalAlignment="Left" VerticalAlignment="Top"
                                 Height="30" Width="Auto" Band="0" BandIndex="1">
                            <TabSwitcher:TabSwitcherClontrol x:Name="tscTabSwitcher" IsHideBtnPrevious="True" btnNextClick="tscTabSwitcher_btnNextClick"/>
                        </ToolBar>
                        <ToolBar x:Name="tbAddressee" HorizontalAlignment="Left" VerticalAlignment="Top"
                                 Height="30" Width="Auto" Band="1" BandIndex="1">
                            <Label x:Name="lAddressee" Content="Список адресов" Height="25" Width="Auto"/>
                            <Button x:Name="btnAddAddressee" Width="25" Height="25" ToolTip="Добавить"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Image Source="/Images/New Add64.png" />
                            </Button>
                            <Button x:Name="btnEditAddressee" Width="25" Height="25" ToolTip="Редактировать"
                                  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Image Source="/Images/New Edit64.png" />
                            </Button>
                            <Button x:Name="btnDeleteAddressee" Width="25" Height="25" ToolTip="Удалить"
                                  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Image Source="/Images/New Remove64.png" />
                            </Button>
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid Grid.Row="1" Grid.ColumnSpan="3" x:Name="dgEmails" AutoGenerateColumns="True"/>
                </Grid>
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel.ToolTip>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/Mail_64x.png" />
                                <TextBlock><Run Text="Заполнение полей письма"/></TextBlock>
                            </StackPanel>
                        </StackPanel.ToolTip>
                        <Image Source="/Images/Mail_64x.png" Width="20"/>
                        <TextBlock><Run Text="Письмо"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Content="От: " Grid.Row="0" Grid.Column="0"/>
                    <TextBox x:Name="tbFromAddress" Grid.Row="1" Grid.Column="0" Text="toVasya@mail.ru"/>
                    
                    <Label Content="Кому: " Grid.Row="0" Grid.Column="1"/>
                    <TextBox x:Name="tbToAddress"  Grid.Row="1" Grid.Column="1" Text="from@gmail.com"/>

                    <Label Content="Пароль: " Grid.Row="2" Grid.Column="0" />
                    <PasswordBox x:Name="pbPassword" Grid.Row="3" Grid.Column="0" Background="Gray"/>

                    <Label Content="Тема письма: " Grid.Row="2" Grid.Column="1" />
                    <RichTextBox x:Name="tbMesSubject" Grid.Row="3" Grid.Column="1" Background="Gray"/>

                    <Label Content="Текст письма: " Grid.Row="2" Grid.Column="2"/>
                    <TextBox x:Name="tbMesBody" Grid.Row="3" Grid.Column="2" Background="Gray"/>
                    
                    <TabSwitcher:TabSwitcherClontrol x:Name="tscTabSwitcherMail" Grid.Row="0" Grid.Column="2" Width="Auto"
                                                     IsHideBtnPrevious="True" btnNextClick="tscTabSwitcher_btnNextClick" btnPreviosClick="tscTabSwitcherMail_btnPreviosClick"/>
                    <Button x:Name="btSend" Grid.Row="1" Grid.Column="2" Click="btSend_Click">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Images/outbox1.png" Width="40"/>
                            <TextBlock><Run Text="Отправить"/></TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabPlanner" >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel.ToolTip>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/Mimetypes-application-vnd-oasis-opendocument-text.ico" />
                                <TextBlock><Run Text="Планирование рассылки по датам"/></TextBlock>
                            </StackPanel>
                        </StackPanel.ToolTip>
                        <Image Source="/Images/Mimetypes-application-vnd-oasis-opendocument-text.ico" Height="20"
                               HorizontalAlignment="Left"/>
                        <TextBlock Margin="3"><Run Text="Планировщик"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Calendar x:Name="cldSchedulDateTimes" Grid.Column="0" Grid.Row="0" Width="179"
                              SelectionMode="MultipleRange"/>
                    <TextBox x:Name="tbTimePicker" Grid.Row="1" Grid.Column="0" Width="179" Height="25"/>
                    <Button x:Name="btnSend" HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="0, 213, 0, 0" Width="179" Height="25" RenderTransformOrigin="-1.12, -0.727"
                            Click="btnSend_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/clock.png"  Width="16" Height="16"/>
                            <TextBlock Margin="3, 0, 0, 0" Text="Отправить запланированно"
                                           VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnSendNow" HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="1,2.6,0,-2" Width="179" Height="25" RenderTransformOrigin="-1.12, -0.727"
                            Click="btnSendNow_Click" Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/Mail_64x.png"  Width="16" Height="16"/>
                            <TextBlock Margin="3, 0, 0, 0" Text="Отправить сразу"
                                           VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabProperties">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel.ToolTip>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/settings.ico" />
                                <TextBlock><Run Text="Разные настройки"/></TextBlock>
                            </StackPanel>
                        </StackPanel.ToolTip>
                        <Label fa:Awesome.Content="Brands_Codepen" />
                        <TextBlock Margin="3"><Run Text="Настройки"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem x:Name="tabReport" >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel.ToolTip>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/Mimetypes-application-vnd-oasis-opendocument-text.ico" />
                                <TextBlock Text="Отчет"/>
                            </StackPanel>
                        </StackPanel.ToolTip>
                        <Label fa:Awesome.Content="Brands_DigitalOcean"/>
                        <TextBlock Margin="3" Text="Отчет"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem x:Name="tabLog" >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel.ToolTip>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/stat.ico" />
                                <TextBlock><Run Text="Записи журнала"/></TextBlock>
                            </StackPanel>
                        </StackPanel.ToolTip>
                        <Label fa:Awesome.Content="Brands_RaspberryPi"/>
                        <TextBlock Margin="3" Text="Журнал"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
